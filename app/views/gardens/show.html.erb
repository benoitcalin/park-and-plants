<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-4 p-3">
        <div class="card-trip">
          <img src="<%= plant.image_url %>" />
          <div class="card-trip-infos">
            <div>
              <h2><%= plant.name %></h2>
            </div>
            <%= link_to plant_path(plant), method: :delete, data: { confirm: "T sur ?" } do %>
              <i class="fas fa-trash-alt" style="color: green"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <div class="col-4 d-flex justify-content-center">
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit 'Add plant', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
